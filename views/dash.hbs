  <div id="swipe-1" class="col s12 blue favcol">
    <div class="row popgame">
      {{#each popgame}}
      <div class="col s4 m3">
        <div class="card cardimg homegame expl">
          <div class="card-image">
            <img src="https://images.igdb.com/igdb/image/upload/t_cover_big_2x/{{this.cover.image_id}}.jpg">
            <a href="/gamepage?game_id={{this.id}}">
              <div class="overlay">
                <div class="text">{{this.name}}</div>
              </div>
            </a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
